server {
    listen 80;
    listen 8080;
    # Put limit of request size at 100mb
    client_max_body_size 100m;

    location / {
        root /home/geoffrey/word-ladder/app;
        try_files $uri $uri/ /index.html;
    }
    location /api/ {
        proxy_pass http://localhost:3000;
    }
}
